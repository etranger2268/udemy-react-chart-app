{
  "compilerOptions": {
    /* ----------------------------------------------------------------------
     * Base Options
     * ---------------------------------------------------------------------- */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "skipLibCheck": true,

    /* ----------------------------------------------------------------------
     * Interop & Resolution
     * ---------------------------------------------------------------------- */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    /* ----------------------------------------------------------------------
     * Build & Output
     * ---------------------------------------------------------------------- */
    "noEmit": true,
    "incremental": true,
    "jsx": "react-jsx",

    /* ----------------------------------------------------------------------
     * Strict Type Checks
     * ---------------------------------------------------------------------- */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* ----------------------------------------------------------------------
     * Paths & Aliases
     * ---------------------------------------------------------------------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ----------------------------------------------------------------------
     * Plugins
     * ---------------------------------------------------------------------- */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
